{
	"name": "typst-toolbox",
	"version": "0.1.0",
	"description": "Obsidian plugin to convert Markdown to Typst and then to DOCX/PDF",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"build:wasm:rust-docx": "cd ../rust-docx && wasm-pack build --target web --out-dir pkg --out-name rust_docx --features wasm",
		"build:wasm:converter": "cd ../typst-docx-converter && wasm-pack build --target web --out-dir pkg --out-name typst_docx --features wasm --no-default-features",
		"build:wasm": "npm run build:wasm:rust-docx && npm run build:wasm:converter",
		"copy:wasm": "node scripts/copy-wasm.mjs",
		"zip:wasm": "node scripts/zip-wasm.mjs",
		"build:all": "npm run build:wasm && npm run copy:wasm && npm run build",
		"build:release": "npm run build:all && npm run zip:wasm",
		"test": "vitest run",
		"release": "dotenv -- release-it",
		"release:dry": "dotenv -- release-it --dry-run",
		"version": "node version-bump.mjs"
	},
	"keywords": [
		"obsidian",
		"typst",
		"docx",
		"pdf",
		"markdown",
		"converter"
	],
	"author": "Boninall",
	"license": "MIT",
	"devDependencies": {
		"@release-it/bumper": "^6.0.1",
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/mdast": "^4.0.4",
		"@types/node": "^20.19.24",
		"@types/unist": "^3.0.3",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"archiver": "^7.0.1",
		"builtin-modules": "3.3.0",
		"esbuild": "0.14.47",
		"obsidian": "latest",
		"release-it": "^17.0.0",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"vitest": "^4.0.8"
	},
	"dependencies": {
		"@codemirror/basic-setup": "^0.20.0",
		"@codemirror/state": "6.5.0",
		"@codemirror/view": "^6.38.6",
		"@myriaddreamin/typst-ts-renderer": "0.6.1-rc5",
		"@myriaddreamin/typst-ts-web-compiler": "0.6.1-rc5",
		"@myriaddreamin/typst.ts": "0.6.1-rc5",
		"codemirror": "^6.0.2",
		"fflate": "^0.8.2",
		"mdast-util-to-string": "^4.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"remark-parse": "^11.0.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"unist-util-visit-parents": "^6.0.2"
	}
}
